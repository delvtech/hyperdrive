{
    "name": "hyperdrive",
    "version": "1.0.0",
    "description": "Hyperdrive Smart Contracts",
    "engines": {
        "node": "^18"
    },
    "scripts": {
        "postinstall": "patch-package --patch-dir .patches",
        "configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
    },
    "_moduleAliases": {
        "test": "./test"
    },
    "lint-staged": {
        "**/**/*.sol": [
            "npx prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "license": "Apache-2.0",
    "devDependencies": {
        "coveralls": "^3.1.1",
        "cspell": "^6.1.1",
        "husky": "^8.0.0",
        "lint-staged": "^13.0.0",
        "patch-package": "^6.4.7",
        "prettier": "^2.6.2",
        "prettier-plugin-solidity": "^1.0.0-beta.19",
        "solhint": "^3.3.7",
        "solhint-plugin-prettier": "0.0.5"
    },
    "dependencies": {
        "yarn": "^1.22.19"
    }
}
