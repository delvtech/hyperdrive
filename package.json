{
  "name": "hyperdrive",
  "version": "1.0.0",
  "description": "Hyperdrive Smart Contracts",
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "postinstall": "patch-package --patch-dir .patches",
    "configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\"",
    "generate:factory-schema": "typescript-json-schema ./script/deploy/schema/factory-schema.ts 'FactoryDeployment' --ref false --topRef false --aliasRef false noExtraProps -o ./script/deploy/schema/factory-schema.json",
    "generate:pool-schema": "typescript-json-schema ./script/deploy/schema/pool-schema.ts 'PoolDeployment' --ref false --topRef false --aliasRef false noExtraProps -o ./script/deploy/schema/pool-schema.json",
    "generate": "yarn run generate:factory-schema && yarn run generate:pool-schema",
    "lint:deploy": "taplo lint ./script/**/*.toml"
  },
  "_moduleAliases": {
    "test": "./test"
  },
  "lint-staged": {
    "**/**/*.sol": [
      "npx prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "plugins": [
      "solhint-plugin-prettier",
      "prettier-plugin-solidity"
    ]
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-ignition": "^0.15.1",
    "@nomicfoundation/hardhat-ignition-viem": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/hardhat-viem": "^2.0.0",
    "@nomicfoundation/ignition-core": "^0.15.1",
    "@taplo/cli": "^0.7.0",
    "@types/chai": "^4.2.0",
    "@types/chai-as-promised": "^7.1.6",
    "@types/mocha": ">=9.1.0",
    "abitype": "^1.0.2",
    "chai": "^4.2.0",
    "coveralls": "^3.1.1",
    "cspell": "^6.1.1",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "hardhat": "^2.22.3",
    "hardhat-deploy": "^0.12.2",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "patch-package": "^6.4.7",
    "prettier": "^3.2.5",
    "prettier-plugin-multiline-arrays": "^3.0.4",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.5.2",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.2",
    "typescript-json-schema": "^0.63.0",
    "viem": "^2.7.6"
  },
  "dependencies": {
    "yarn": "^1.22.19"
  }
}
